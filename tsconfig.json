{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}